<input
  value={{cs-to-string value refresh}}
  oninput={{action update value="target.value" }}
  onkeydown={{action (action "maybeEnter")}}
  onchange={{action (action "onChange") value="target.value"}}
  onblur={{action (action "onBlur") value=event}}
  onfocus={{action (action "onFocus") value=event}}
  disabled={{disabled}}
  min={{min}}
  class={{class}}
  placeholder={{placeholder}}
  type={{type}}
>
