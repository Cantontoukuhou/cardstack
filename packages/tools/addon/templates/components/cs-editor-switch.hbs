<button
  class="cs-editor-switch {{if enabled "enabled" "disabled"}}"
  {{action "toggleEditing"}}
  data-test-cs-editor-switch
>
  {{#if enabled}}
    Done Editing
  {{else}}
    Edit Page
  {{/if}}

  {{cs-svg
    (if enabled "done" "write")
    width="20px"
    height="20px"
    data-test-cs-editor-switch-icon=enabled
  }}
</button>
