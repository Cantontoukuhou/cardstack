{{#let
  (cs-field-editor-for content field)
  (cs-field-editor-options-for content field)
as |editorName editorOptions|
}}
  {{#if (is-component editorName)}}
    {{#if firstError}}
      <div class="field-editor--error-message">{{firstError}}</div>
    {{/if}}
    {{component
      editorName
      content=content
      field=field
      editorOptions=editorOptions
      tagName=""
      enabled=enabled
      disabled=disabled
      onchange=validate
    }}
  {{else}}
    {{cs-assert "No such field editor" editorName}}
  {{/if}}
{{/let}}
