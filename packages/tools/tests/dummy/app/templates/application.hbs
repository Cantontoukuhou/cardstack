{{#cardstack-edges}}
  {{#squishable-container}}
    {{#cardstack-session as |session|}}
      {{#if session.isAuthenticated }}
        <button id="logout-button" {{action session.logout}}>Logout {{session.user.name}}</button>
      {{else}}
        {{#mock-login as |login|}}
          <button id="login-button" {{action login "user1"}} data-test-cardstack="login-button">Login</button>
        {{/mock-login}}
      {{/if}}
    {{/cardstack-session}}
    {{outlet}}
  {{/squishable-container}}
{{/cardstack-edges}}