{{#let (get content field) as |categories|}}
  {{#each categories as |category|}}
    <div class="field-editor category-editor">
      {{input
        value=category.name
        disabled=disabled
        focus-out=onchange
      }}
    </div>
  {{/each}}
  <button type="button" onclick={{action 'addCategory'}} data-test-add-category-button>
    Add
  </button>
{{/let}}