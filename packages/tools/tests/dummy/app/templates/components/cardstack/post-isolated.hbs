<div class="post-page">
  <div>{{#link-to "posts"}}Back to posts{{/link-to}}</div>
  <h1>
    {{cs-field content 'title'}} by {{cs-field content.author 'name'}}
  </h1>
  <p>
    {{cs-field content 'publishedAt'}}
  </p>
  <p>
    Category: {{cs-field content 'category'}}
  </p>
  <p>
    {{#cs-field-group content name="reading-time" caption="Underestimated Read Time" fields="readingTimeValue,readingTimeUnit" as |rt|}}
      <div>{{rt.readingTimeValue}} {{rt.readingTimeUnit}}</div>
    {{/cs-field-group}}
  </p>
  <h4>Comments</h4>
  <ul>
    {{#each content.comments as |comment|}}
      <li>
        {{cs-field comment.poster "name"}}: {{cs-field comment "body"}}
        {{#cs-field-group
          comment
          name="karma"
          caption="Karma"
          fields="karmaValue,karmaType"
        as |ck|}}
          <div>{{ck.karmaValue}} {{ck.karmaType}}</div>
        {{/cs-field-group}}
      </li>
    {{/each}}
  </ul>
</div>
