<div class="title">{{content.title}}</div>
<div class="page">belongs to page <em>"{{content.page.blurb}}"</em></div>
<div class="page-test">{{cardstack-url content.page}}</div>
<div class="post-test">{{cardstack-url '/posts/123 45'}}</div>

{{!-- new-content route doesnt know about the setParam action, so guard for it --}}
{{#if content.id}}
  <button class="set-query-param-1" {{action setParam 'foo' 'fee'}}>Set query param test 1</button>
  <button class="set-query-param-2" {{action setParam 'foo' 'fee fo fum'}}>Set query param test 2</button>
  <button class="set-undeclared-query-param" {{action setParam 'nope' 'you can`t set me'}}>Set undeclared query param</button>
  <button class="clear-query-param" {{action setParam 'foo' null}}>Set undeclared query param</button>
  <button class="clear-undeclared-query-param" {{action setParam 'blah' null}}>Set undeclared query param</button>
{{/if}}

{{#if params.foo}}
  <div class="foo">foo is {{params.foo}}</div>
{{/if}}
{{#if params.bee}}
  <div class="bee">bee is {{params.bee}}</div>
{{/if}}
